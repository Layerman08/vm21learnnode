{% extends 'partials/layout.njk' %}
{% block content %}
    <h1>Articles</h1>
    <a href="/articles/new">Add Article</a>
    <table>
        <thead>
            <th>Id</th>
            <th>Title</th>
            <th>Body</th>
            <th>Actions</th>
        </thead>
        <tbody>
            {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.body }}</td>
                <td>
                    <a href="/articles/edit?id={{ article.id }}">Edit</a>
                    <a href="/articles/delete?id={{ article.id }}">Delete</a>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}